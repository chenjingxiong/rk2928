<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    
	
	<Button
	    android:id="@+id/id_dbg_btn"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="30dip"
	    android:text="on"
	    />
	<Button
	    android:id="@+id/id_dbg_btn_1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_dbg_btn"
	    android:text="off"
	    />

	<com.enjack.diyviews.CircleColorButtonView
		android:id="@+id/id_dbg_ccbv"
        android:layout_width="0dip"
        android:layout_height="0dip"
        custom:bkColor="#ff990000"
        custom:bkColorPressed="#ff000099"
        custom:radius="@dimen/wdiv30"
        custom:frameColor="#ff00ff00"
        custom:frameWidth="6px"
        custom:text="Circle"
        custom:textSize="12sp"
        custom:textSuggestSize="true"
        custom:textColor="#ffeeffee"

        custom:textColorPressed="#84480d98"
        android:layout_below="@id/id_dbg_btn_1"
        android:layout_centerHorizontal="true"
		/>

    <com.enjack.diyviews.CircleToggle
        android:id="@+id/id_debug_circle_toggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/id_dbg_ccbv"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        custom:radius="100dp"
        custom:textSuggestSize="true"
        custom:text="abc"
        custom:textPressed="123"
        custom:textColor="#84480d98"
        custom:textColorPressed="#ffedc649"
        custom:frameWidth="2px"
        custom:frameColor="#84480d98"
        custom:frameColorPressed="#ffedc649"
        custom:bkColor="#00000000"
        custom:bkColorPressed="#ffff150e"
         />
	
	
</RelativeLayout>
